<%- include('partials/header') %>
  <div class="container-fluid pb-0">
  <div class="container">
    <h1>List of Persons</h1>
    <div class="row">
      <% persons.forEach(person => { %>
        <div class="col-sm-4">
          <div class="card mb-4">
            <img src="<%= person.profile.image %>" class="card-img-top" alt="Profile Image" width=25% height="auto">
            <div class="card-body">
              <h5 class="card-title"><%= person.identification.firstName %> <%= person.identification.lastName %></h5>
              <p class="card-text">Matricule: <%= person._id %></p>
              <a href="/person/<%= person._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>



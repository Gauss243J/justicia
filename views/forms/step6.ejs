<%- include('../partials/header') %>
  <div class="container-fluid pb-0">
  <div class="main-content">
    <div class="form-container">
      <h2>Étape 6 : Lieux des opérations</h2>
      <form action="/submit/6" method="post">
        <div class="form-group">
          <label>Lieu de travail actuel</label>
          <input type="text" class="form-control" name="operations[currentWorkplace]" placeholder="Lieu de travail actuel" required>
        </div>
        <div class="form-group">
          <label>Lieu de l'opération principale</label>
          <input type="text" class="form-control" name="operations[mainOperationLocation]" placeholder="Lieu de l'opération principale" required>
        </div>
        <div class="form-group">
          <label>Autres lieux d'opération</label>
          <input type="text" class="form-control" name="operations[otherOperationLocations]" placeholder="Autres lieux d'opération" required>
        </div>
        <div class="form-group">
          <label>Durée des opérations</label>
          <input type="text" class="form-control" name="operations[operationDuration]" placeholder="Durée des opérations" required>
        </div>
        <div class="form-group">
          <label>Coordonnées des lieux</label>
          <input type="text" class="form-control" name="operations[locationCoordinates]" placeholder="Coordonnées des lieux">
        </div>
        <div class="mt-4">
          <div class="row">
            <div class="col-4">
              <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Suivant</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</body>
</html>

<%- include('../partials/header') %>
  <div class="container-fluid pb-0">
  <div class="main-content">
    <div class="form-container">
      <h2>Étape 9 : Crimes</h2>
      <form action="/submit/9" method="post">
        <div class="form-group">
          <label>Type de crime</label>
          <input type="text" class="form-control" name="crimes[crimeType]" placeholder="Type de crime" required>
        </div>
        <div class="form-group">
          <label>Date du crime</label>
          <input type="date" class="form-control" name="crimes[crimeDate]" required>
        </div>
        <div class="form-group">
          <label>Lieu du crime</label>
          <input type="text" class="form-control" name="crimes[crimeLocation]" placeholder="Lieu du crime" required>
        </div>
        <div class="form-group">
          <label>Détails du crime</label>
          <input type="text" class="form-control" name="crimes[crimeDetails]" placeholder="Détails du crime" required>
        </div>
        <div class="form-group">
          <label>Statut judiciaire</label>
          <input type="text" class="form-control" name="crimes[legalStatus]" placeholder="Statut judiciaire" required>
        </div>
        <div class="mt-4">
          <div class="row">
            <div class="col-4">
              <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Suivant</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</body>
</html>

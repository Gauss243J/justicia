<%- include('../partials/header') %>
  <div class="container-fluid pb-0">
      <div class="main-content">
        <div class="form-container">
          <h2>Étape 2 : Expérience du passé</h2>
          <form action="/submit/2" method="post">
            <div class="form-group">
              <label>Emploi précédent</label>
              <input type="text" class="form-control" name="experience[previousJob]" placeholder="Emploi précédent" required>
            </div>
            <div class="form-group">
              <label>Années d'expérience</label>
              <input type="number" class="form-control" name="experience[yearsOfExperience]" placeholder="Années d'expérience" required>
            </div>
            <div class="form-group">
              <label>Compétences</label>
              <input type="text" class="form-control" name="experience[skills]" placeholder="Compétences" required>
            </div>
            <div class="form-group">
              <label>Dernier employeur</label>
              <input type="text" class="form-control" name="experience[lastEmployer]" placeholder="Dernier employeur" required>
            </div>
            <div class="form-group">
              <label>Raison du départ</label>
              <input type="text" class="form-control" name="experience[reasonForLeaving]" placeholder="Raison du départ" required>
            </div>
            <div class="mt-4">
              <div class="row">
                <div class="col-4">
                  <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Suivant</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </body>
    </html>
    
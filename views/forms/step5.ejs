<%- include('../partials/header') %>
  <div class="container-fluid pb-0">
  <div class="main-content">
    <div class="form-container">
      <h2>Étape 5 : Lieux préférés</h2>
      <form action="/submit/5" method="post">
        <div class="form-group">
          <label>Ville préférée</label>
          <input type="text" class="form-control" name="preferences[city]" placeholder="Ville préférée" required>
        </div>
        <div class="form-group">
          <label>Pays préféré</label>
          <input type="text" class="form-control" name="preferences[country]" placeholder="Pays préféré" required>
        </div>
        <div class="form-group">
          <label>Type de lieu préféré</label>
          <input type="text" class="form-control" name="preferences[locationType]" placeholder="Type de lieu préféré" required>
        </div>
        <div class="form-group">
          <label>Saison préférée</label>
          <input type="text" class="form-control" name="preferences[season]" placeholder="Saison préférée" required>
        </div>
        <div class="form-group">
          <label>Activités préférées</label>
          <input type="text" class="form-control" name="preferences[activities]" placeholder="Activités préférées" required>
        </div>
        <div class="mt-4">
          <div class="row">
            <div class="col-4">
              <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Suivant</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
